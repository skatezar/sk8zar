<div class="container">
  <h3 class="text-center mb-3">
    Claim Your Coins! :)
  </h3>
  <%= simple_form_for [ @communitytask, @claim ] do |f| %>
  <div class="d-flex justify-content-center">
    <%= f.text_area(:content, :required => true, size: '50x10', placeholder: "How do we know you completed the task? Write it here!", class: "light-border")%>
  </div>

  <div class="d-flex justify-content-center mt-3">

    <%= f.submit "Claim Coins", class: "btn btn-new money" %>
  </div>
  <% end %>

  <br>

</div>
