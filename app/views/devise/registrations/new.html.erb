<div class="container mt-3">
  <h2 class="text-center">sign up</h2>
  <p class="text-center">...AND HELP US CONNECT THE SKATEBOARDING COMMUNITY</p>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", id: "password-input" } %>
      <label><input type="checkbox" name="checkbox" value="value" id="showpw"> Show Password</label>

     <div class="container mt-2">
        <p class="text-center">By creating an account you agree to our  <button type="button" class="btn" data-toggle="modal" data-target="#privacypolicyModalLong">Privacy Policy</button></p>


    </div>
    </div>
    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Sign up", class: "sell-link",
      data: { disable_with: "Creating Account..." }  %>
    </div>
  <% end %>

  <!-- <%= render "devise/shared/links" %>-->
</div>



<script type="text/javascript">
  var showPwCheckbox = document.getElementById('showpw')
  var password = document.getElementById('password-input')

  console.log(showPwCheckbox)

  showPwCheckbox.addEventListener("click", (event) => {
      if (showPwCheckbox.checked == true) {
        password.type  = "text";
      }
      else {
        password.type  = "password";
      }
  });

</script>
